# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chat_db
DB_USER=postgres
DB_PASSWORD=your_password
# Render/Postgres URL (takes priority if present)
# DATABASE_URL=postgres://user:password@host:5432/chat_db
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Server Configuration
PORT=3000
NODE_ENV=development

# Client Configuration
CLIENT_URL=http://localhost:5173
# Optional comma-separated extra origins
# CORS_ORIGINS=https://your-frontend.vercel.app,https://your-preview.vercel.app
